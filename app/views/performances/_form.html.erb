<%if @current_user.nil?%>
<h2>Restricted to Admins!</h2>

<% elsif @current_user.present?%>

<%= form_for @performance do |f| %>
<%= f.label :student_id %>
<%= f.select :student_id, Student.pluck(:name,:id)%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description%>
<%= f.text_field :description %>
<%= f.label :performance_date %>
<%= f.text_field :performance_date %>
<%= f.label :media %>
<%= f.url_field :media %>

<%= f.submit %>
<% end %>
<% end %>
