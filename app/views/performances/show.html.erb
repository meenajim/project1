<h1><%= @performance.student.name%></h1>
<ul>
  <li><%= @performance.name %></li>
  <%= image_tag @performance.media,:alt =>@performance.description, :class =>'feature' %>
  <!-- <li><%= video_tag @performance.media,:alt =>@performance.description, :class =>'feature' %></li> -->

  <% if @performance.performance_date.present?%>
  <li><%= @performance.performance_date.strftime '%d/%m/%Y' unless @performance.performance_date.nil? %></li>
  <%end%>
<li><%= @performance.description %></li>

</ul>
<%if @current_user.present? && @current_user.user_type == 'Admin'%>
<div class="controls">
  <%= link_to 'Edit Performance', edit_performance_path(@performance)%>
<%= link_to 'Delete Performance', @performance, :method => 'delete', :data =>{:confirm =>'Are you sure?'}%>
</div>
<% end %>
