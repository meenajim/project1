


<%if @current_user.nil?%>
<p></p><p></p>
<h4>Please Sign in to access this feature.</h4>

<% elsif @current_user.present?%>
<div class="row center">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <h1>Performances</h1>
    </div>
    <div class="col-sm">
    </div>
</div>




<%if @current_user.present? && @current_user.user_type == 'Admin'%>
<div class="row center">
    <div class="col-sm">
    </div>
    <div class="col-sm">
    <%= link_to 'New Performance',new_performance_path,:class => 'badge badge-warning'%>
    </div>
    <div class="col-sm">
    </div>
</div>

<p></p>
<p></p>
<ul>

  <div class="row center">
      <div class="col-sm">
      </div>
      <div class="col-sm">
          <div class="card" style="width: 18rem;">

                <ul class="list-group list-group-flush">
                    <% @performances.each do |performance| %>
                      <li class="list-group-item"><%= link_to performance.name, performance %></li>
                    <% end %>
                </ul>
          </div>
        </div>


           <% else %>
          <div class="card" style="width: 18rem;">
                 <ul class="list-group list-group-flush">
                 <% @performances_student.each do |performance| %>

                   <li class="list-group-item"><%= link_to performance.name, performance %></li>
                  <% end %>
                  </ul><p></p>
          </div>
          <% end %>
          <div class="col-sm">
          </div>
<%end %>
