
<h1><%=@instructor.name%></h1>
<%= image_tag @instructor.photo, :alt =>@instructor.name, :class =>'feature'%>
<p><%=@instructor.name%> has <%= pluralize(@instructor.likes,'like')%></p>

<ul>

<li><u>Degree held:</u> <%= @instructor.qualification%></li>
<li>Instrument taught: <%= @instructor.instrument %></li>
<li>About: <%= @instructor.description %></li>
</ul>

<%if @current_user.present? && @current_user.user_type == 'Admin'%>
<div class = "controls">
  <%= link_to 'Edit Instructor', edit_instructor_path(@instructor)%>
<%= link_to 'Delete Instructor', @instructor, :method => 'delete', :data =>{:confirm =>'Are you sure?'}%>
</div>
<% end %>
