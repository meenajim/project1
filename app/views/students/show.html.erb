<%if @current_user.nil?%>
<h2>Please Sign in to proceed!</h2>

<% elsif @current_user.present?%>
<p></p>
<p></p>

    <h1><%= @student.name %></h1>
    <div class="card" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @student.user.name %> Family</li>
        <li class="list-group-item">Phone: <%=number_to_phone @student.phone %>
        <% if @student.dob.present?%>
          <li  class="list-group-item">Date of Birth: <%= @student.dob.strftime '%d/%m/%Y' unless @student.dob.nil? %></li>
          <%end%>
        </li>

      </ul>
    </div>


<p></p>
<p></p>
<div class="controls">
    <%= link_to 'Edit Student', edit_student_path(@student),:class => 'badge badge-warning'%>
    <%= link_to 'Delete Student', @student, :method => 'delete', :data =>{:confirm =>'Are you sure?'},:class => 'badge badge-warning'%>
</div>

<% end %>
